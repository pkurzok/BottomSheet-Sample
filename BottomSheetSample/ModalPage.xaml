<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:bottomSheetSample="clr-namespace:BottomSheetSample"
             x:DataType="bottomSheetSample:ModalViewModel"
             x:Class="BottomSheetSample.ModalPage">
    <ContentPage.Content>
        
        <VerticalStackLayout Padding="25" Spacing="25">
            <Label Text="I'm the modal page"/>
            
            <Button
                Text="Open Sheet" 
                Command="{Binding OpenSheetCommand}"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
        
    </ContentPage.Content>
</ContentPage>